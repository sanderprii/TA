datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int       @id @default(autoincrement())
  username     String    @unique
  password     String
  fullName     String?
  dateOfBirth  DateTime?
  sex          String?
  records      Record[]
  trainings    Training[]
}

model Training {
  id        Int        @id @default(autoincrement())
  type      String
  userId    Int
  user      User       @relation(fields: [userId], references: [id])
  exercises Exercise[]
}

model Exercise {
  id           Int      @id @default(autoincrement())
  exerciseName String
  wodType      String?  // 'time' või 'count' või muu
  time         String?
  count        Int?
  rounds       Int?
  trainingId   Int
  training     Training @relation(fields: [trainingId], references: [id])
}

model Record {
  id     Int    @id @default(autoincrement())
  userId Int
  label  String
  value  Int


  user   User   @relation(fields: [userId], references: [id])

  @@unique([userId, label])
}
