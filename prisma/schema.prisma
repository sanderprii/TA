datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int        @id @default(autoincrement())
  username    String     @unique
  password    String
  fullName    String?
  dateOfBirth DateTime?
  sex         String?
  records     Record[]
  trainings   Training[]
  monthlyGoal Int?
}

model Training {
  id        Int        @id @default(autoincrement())
  type      String
  wodName   String?
  wodType   String? // For Time, EMOM, Tabata, AMRAP
  date      DateTime?
  score     String?
  userId    Int
  user      User       @relation(fields: [userId], references: [id])
  exercises Exercise[]
}

model Exercise {
  id           Int      @id @default(autoincrement())
  exerciseData String
  trainingId   Int
  training     Training @relation(fields: [trainingId], references: [id])
}

model Record {
  id     Int       @id @default(autoincrement())
  type   String?
  name   String?
  date   DateTime?
  score  String?
  weight Float?
  time   String?
  userId Int
  user   User      @relation(fields: [userId], references: [id])
}

model defaultWOD {
  id          Int    @id @default(autoincrement())
  name        String @unique
  type        String
  description String
}
