<div class="container">
    <h1>Register</h1>
    <form id="register-form">
        <div>
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" required>
        </div>
        <div>
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>
        </div>
        <!-- New optional fields -->
        <div>
            <label for="email">Email (optional):</label>
            <input type="email" id="email" name="email">
        </div>
        <div class="mb-3">
            <label class="form-label d-block">Affiliate Owner (optional):</label>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" id="affiliate-owner-yes" name="isAffiliateOwner" value="true">
                <label class="form-check-label" for="affiliate-owner-yes">Yes</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" id="affiliate-owner-no" name="isAffiliateOwner" value="false" checked>
                <label class="form-check-label" for="affiliate-owner-no">No</label>
            </div>
        </div>

        <div>
            <label for="sex">Sex (optional):</label>
            <select id="sex" name="sex">
                <option value="">Select</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <!-- Add other options if needed -->
            </select>
        </div>
        <div>
            <label for="dateOfBirth">Date of Birth (optional):</label>
            <input type="date" id="dateOfBirth" name="dateOfBirth">
        </div>
        <!-- End of new fields -->
        <button type="submit">Register</button>
    </form>
</div>